[user]
    name = A Marble
    email = admarble@gmail.com
[core]
    editor = vim
    autocrlf = input
    whitespace = trailing-space,space-before-tab

[color]
    ui = auto

[pull]
    rebase = false

[init]
    defaultBranch = main

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit 